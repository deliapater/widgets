{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "types": ["vuetify", "@storybook/vue3"],
  },
  "references": [
    { "path": "./tsconfig.app.json" }
  ],
  "include": [
    "src/**/*.ts",    
    "src/**/*.d.ts",   
    "src/**/*.tsx",   
    "src/**/*.vue",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
